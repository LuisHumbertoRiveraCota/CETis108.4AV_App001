<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.cetis108.cetis1084av_app001.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="29dp"
        android:id="@+id/bienvenidos"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="27sp"
        android:textColor="@color/colorPrimary"
        android:text="Bienvenidos "
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/etxtIngresar"
        android:ems="10"
        android:layout_marginTop="37dp"
        android:id="@+id/etxtIngresar"
        android:layout_below="@+id/bienvenidos"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:text="@string/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnContinuar"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/etxtIngresar"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:elevation="0dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="@string/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultado"
        android:layout_below="@+id/etxtIngresar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="49dp"
        android:textSize="18sp" />

</RelativeLayout>
